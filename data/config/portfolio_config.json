{
  "project": {
    "name": "Portfolio Optimizer",
    "version": "1.0.0",
    "description": "Quantum-ready portfolio optimization with mean-variance and QUBO formulations"
  },
  
  "data": {
    "start_date": "",
    "end_date": "",
    "universe": [
      "AAPL",
      "MSFT",
      "JPM",
      "JNJ",
      "XOM",
      "WMT",
      "GOOGL",
      "BAC",
      "PFE",
      "CVX"
    ],
    "benchmark": "SPY",
    "data_file": "data/market/historical_prices.csv",
    "frequency": "daily"
  },
  
  "optimizer": {
    "type": "mean_variance",
    "objective": "max_sharpe",
    "risk_aversion": 1.0,
    "constraints": {
      "max_weight": 0.30,
      "min_weight": 0.05,
      "sum_to_one": true,
      "long_only": true,
      "max_turnover": 0.50
    },
    "risk_free_rate": 0.02
  },
  
  "qubo": {
    "enabled": true,
    "num_bits_per_asset": 4,
    "penalty_constraint": 100.0,
    "penalty_turnover": 50.0,
    "solver": "simulated_annealing",
    "solver_params": {
      "max_iterations": 10000,
      "initial_temperature": 1.0,
      "cooling_rate": 0.99,
      "random_seed": 42
    }
  },
  
  "risk_model": {
    "type": "sample_covariance",
    "estimation_window": 252,
    "min_periods": 60,
    "method": "ewma",
    "ewma_lambda": 0.94,
    "shrinkage": {
      "enabled": false,
      "target": "constant_correlation",
      "intensity": "auto"
    }
  },
  
  "backtest": {
    "initial_capital": 1000000.0,
    "rebalance_frequency": "monthly",
    "lookback_window": 252,
    "min_history": 60,
    "transaction_costs": {
      "commission_rate": 0.001,
      "slippage_bps": 5.0,
      "market_impact": "linear"
    },
    "cash_management": {
      "allow_cash": true,
      "cash_return": 0.0
    }
  },
  
  "performance": {
    "metrics": [
      "total_return",
      "annualized_return",
      "volatility",
      "sharpe_ratio",
      "sortino_ratio",
      "calmar_ratio",
      "max_drawdown",
      "alpha",
      "beta",
      "information_ratio",
      "tracking_error",
      "var_95",
      "cvar_95",
      "win_rate",
      "profit_factor"
    ],
    "benchmark_comparison": true,
    "risk_free_rate": 0.02,
    "confidence_level": 0.95
  },
  
  "output": {
    "results_dir": "results",
    "save_weights": true,
    "save_returns": true,
    "save_metrics": true,
    "save_trades": true,
    "formats": ["json", "csv"],
    "plots": {
      "equity_curve": true,
      "weights_evolution": true,
      "risk_return": true,
      "drawdown": true,
      "rolling_metrics": true
    }
  },
  
  "logging": {
    "level": "INFO",
    "console": true,
    "file": "results/portfolio_optimizer.log"
  }
}
