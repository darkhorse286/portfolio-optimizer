{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": false
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--",
                "-j",
                "4"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": false
            },
            "dependsOn": []
        },
        {
            "label": "CMake Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "run_tests",
                "--",
                "-j",
                "4"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": false
            }
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": false
            }
        },
        {
            "label": "CMake Rebuild",
            "type": "shell",
            "command": "rm -rf build && mkdir build && cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build -- -j4",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Run Portfolio Optimizer",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/portfolio_optimizer",
            "args": [
                "--config",
                "data/config/portfolio_config.json",
                "--verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            },
            "dependsOn": [
                "CMake Build"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/run_tests",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            },
            "dependsOn": [
                "CMake Build Tests"
            ]
        },
        {
            "label": "Generate Synthetic Data",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-I/usr/include/eigen3",
                "${workspaceFolder}/scripts/generate_data.cpp",
                "${workspaceFolder}/src/data/market_data.cpp",
                "${workspaceFolder}/src/data/data_loader.cpp",
                "-o",
                "${workspaceFolder}/build/generate_data",
                "&&",
                "${workspaceFolder}/build/generate_data"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            }
        }
    ]
}